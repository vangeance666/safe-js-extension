{

  "manifest_version": 2,
  "name": "safejs",
  "version": "1.0",

  "description": "Keeping you safe from JS malware", 
  "icons": {
    "48": "icons/shield.png",
    "96": "icons/shield.png"
  },
  "permissions": [
    "contextMenus",
    "storage",
    "<all_urls>",
    "webRequest"
  ],
  "background": {
    "scripts": ["background/init.js"]
  },
  // "content_scripts": [
  //   {
  //     "matches": ["<all_urls>"],
  //     "js": ["popup/main.js"]
  //   }
  // ],
  "browser_action": {
    "default_icon": "icons/shield.png",
    "default_title": "Safe-JS",
    "default_popup": "popup/safejs.html"
  },
    "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "addon@example.com"
    }
  }




}
